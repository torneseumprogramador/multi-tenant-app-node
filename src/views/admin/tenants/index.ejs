<div class="header">
    <h1 class="page-title">
        <i class="bi bi-building me-3"></i>
        Organizações
    </h1>
    <p class="page-subtitle">Gerenciar todas as organizações do sistema</p>
</div>

<div class="content-card">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="mb-0">
            <i class="bi bi-list me-2"></i>
            Lista de Organizações
        </h3>
        <a href="/admin/tenants/create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>
            Nova Organização
        </a>
    </div>
    
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Slug</th>
                    <th>Domínio</th>
                    <th>Status</th>
                    <th>Configurações</th>
                    <th>Usuários</th>
                    <th>Tarefas</th>
                    <th>Criado em</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% tenants.forEach(tenant => { %>
                    <tr>
                        <td>
                            <div class="d-flex align-items-center">
                                <div class="me-3">
                                    <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center" 
                                         style="width: 40px; height: 40px; background: <%= tenant.config?.primaryColor || '#6366f1' %> !important;">
                                        <i class="bi bi-building text-white"></i>
                                    </div>
                                </div>
                                <div>
                                    <div class="fw-bold"><%= tenant.name %></div>
                                    <% if (tenant.config?.companyName) { %>
                                        <small class="text-muted"><%= tenant.config.companyName %></small>
                                    <% } %>
                                </div>
                            </div>
                        </td>
                        <td>
                            <code class="bg-light px-2 py-1 rounded"><%= tenant.slug %></code>
                        </td>
                        <td>
                            <% if (tenant.domain) { %>
                                <span class="text-muted"><%= tenant.domain %></span>
                            <% } else { %>
                                <span class="text-muted">-</span>
                            <% } %>
                        </td>
                        <td>
                            <% if (tenant.isActive) { %>
                                <span class="badge badge-success">
                                    <i class="bi bi-check-circle me-1"></i>
                                    Ativo
                                </span>
                            <% } else { %>
                                <span class="badge badge-danger">
                                    <i class="bi bi-x-circle me-1"></i>
                                    Inativo
                                </span>
                            <% } %>
                        </td>
                        <td>
                            <% if (tenant.config) { %>
                                <div class="d-flex align-items-center">
                                    <div class="me-2" style="width: 20px; height: 20px; background: <%= tenant.config.primaryColor %>; border-radius: 50%;"></div>
                                    <div class="me-2" style="width: 20px; height: 20px; background: <%= tenant.config.secondaryColor %>; border-radius: 50%;"></div>
                                    <small class="text-muted">Configurado</small>
                                </div>
                            <% } else { %>
                                <span class="text-muted">Padrão</span>
                            <% } %>
                        </td>
                        <td>
                            <span class="badge bg-light text-dark">
                                <%= (tenant as any)._count?.users || 0 %> usuários
                            </span>
                        </td>
                        <td>
                            <span class="badge bg-light text-dark">
                                <%= (tenant as any)._count?.tasks || 0 %> tarefas
                            </span>
                        </td>
                        <td>
                            <small class="text-muted">
                                <%= new Date(tenant.createdAt).toLocaleDateString('pt-BR') %>
                            </small>
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a href="/admin/tenants/<%= tenant.id %>" 
                                   class="btn btn-sm btn-outline-primary" 
                                   title="Ver detalhes">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a href="/admin/tenants/<%= tenant.id %>/edit" 
                                   class="btn btn-sm btn-outline-warning" 
                                   title="Editar">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <button type="button" 
                                        class="btn btn-sm btn-outline-danger" 
                                        title="Excluir"
                                        onclick="confirmDelete('<%= tenant.id %>', '<%= tenant.name %>')">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
    
    <% if (tenants.length === 0) { %>
        <div class="text-center py-5">
            <i class="bi bi-building display-1 text-muted"></i>
            <h4 class="mt-3 text-muted">Nenhuma organização encontrada</h4>
            <p class="text-muted">Crie sua primeira organização para começar</p>
            <a href="/admin/tenants/create" class="btn btn-primary">
                <i class="bi bi-plus-circle me-2"></i>
                Criar Organização
            </a>
        </div>
    <% } %>
</div>

<script>
function confirmDelete(tenantId, tenantName) {
    if (confirm(`Tem certeza que deseja excluir a organização "${tenantName}"? Esta ação não pode ser desfeita.`)) {
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = `/admin/tenants/${tenantId}?_method=DELETE`;
        document.body.appendChild(form);
        form.submit();
    }
}
</script> 