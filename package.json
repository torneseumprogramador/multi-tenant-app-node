{
  "name": "todo-app",
  "version": "1.0.0",
  "description": "Aplicação de agendador de tarefas com Node.js, TypeScript, Express, EJS e PostgreSQL",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "db:migrate": "prisma migrate dev",
    "db:seed": "ts-node src/prisma/seed.ts",
    "db:studio": "prisma studio",
    "db:generate": "prisma generate"
  },
  "keywords": ["todo", "tasks", "nodejs", "typescript", "express", "ejs", "postgresql"],
  "author": "Seu Nome",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "express": "^4.18.2",
    "ejs": "^3.1.9",
    "express-ejs-layouts": "^2.5.1",
    "express-validator": "^7.0.1",
    "moment": "^2.29.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/ejs": "^3.1.5",
    "@types/express-ejs-layouts": "^2.5.0",
    "prisma": "^5.7.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
} 