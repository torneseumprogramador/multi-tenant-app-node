<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2 class="mb-0">
            <i class="bi bi-pencil-square me-2"></i>
            Editar Tarefa
        </h2>
        <a href="/tasks" class="btn btn-outline-primary">
            <i class="bi bi-arrow-left me-2"></i>
            Voltar
        </a>
    </div>
    
    <div class="card-body">
        <form action="/tasks/<%= task.id %>?_method=PUT" method="POST">
            <div class="row">
                <div class="col-md-8">
                    <div class="mb-3">
                        <label for="title" class="form-label">
                            <i class="bi bi-type me-2"></i>
                            Título *
                        </label>
                        <input 
                            type="text" 
                            id="title" 
                            name="title" 
                            class="form-control" 
                            value="<%= task.title %>"
                            required
                            placeholder="Digite o título da tarefa"
                        >
                        <% if (locals.errors) { %>
                            <% errors.forEach(error => { %>
                                <% if (error.path === 'title') { %>
                                    <div class="text-danger small mt-1">
                                        <i class="bi bi-exclamation-triangle me-1"></i>
                                        <%= error.msg %>
                                    </div>
                                <% } %>
                            <% }) %>
                        <% } %>
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-label">
                            <i class="bi bi-text-paragraph me-2"></i>
                            Descrição
                        </label>
                        <textarea 
                            id="description" 
                            name="description" 
                            class="form-control" 
                            rows="4"
                            placeholder="Digite uma descrição detalhada da tarefa"
                        ><%= task.description || '' %></textarea>
                        <% if (locals.errors) { %>
                            <% errors.forEach(error => { %>
                                <% if (error.path === 'description') { %>
                                    <div class="text-danger small mt-1">
                                        <i class="bi bi-exclamation-triangle me-1"></i>
                                        <%= error.msg %>
                                    </div>
                                <% } %>
                            <% }) %>
                        <% } %>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="mb-3">
                        <label for="dueDate" class="form-label">
                            <i class="bi bi-calendar-event me-2"></i>
                            Data de Vencimento
                        </label>
                        <input 
                            type="datetime-local" 
                            id="dueDate" 
                            name="dueDate" 
                            class="form-control"
                            value="<%= task.dueDate ? moment(task.dueDate).format('YYYY-MM-DDTHH:mm') : '' %>"
                        >
                        <% if (locals.errors) { %>
                            <% errors.forEach(error => { %>
                                <% if (error.path === 'dueDate') { %>
                                    <div class="text-danger small mt-1">
                                        <i class="bi bi-exclamation-triangle me-1"></i>
                                        <%= error.msg %>
                                    </div>
                                <% } %>
                            <% }) %>
                        <% } %>
                    </div>

                    <div class="mb-3">
                        <label for="status" class="form-label">
                            <i class="bi bi-flag me-2"></i>
                            Status
                        </label>
                        <select id="status" name="status" class="form-select">
                            <option value="PENDING" <%= task.status === 'PENDING' ? 'selected' : '' %>>
                                <i class="bi bi-clock"></i> Pendente
                            </option>
                            <option value="IN_PROGRESS" <%= task.status === 'IN_PROGRESS' ? 'selected' : '' %>>
                                <i class="bi bi-arrow-repeat"></i> Em Andamento
                            </option>
                            <option value="COMPLETED" <%= task.status === 'COMPLETED' ? 'selected' : '' %>>
                                <i class="bi bi-check-circle"></i> Concluída
                            </option>
                        </select>
                        <% if (locals.errors) { %>
                            <% errors.forEach(error => { %>
                                <% if (error.path === 'status') { %>
                                    <div class="text-danger small mt-1">
                                        <i class="bi bi-exclamation-triangle me-1"></i>
                                        <%= error.msg %>
                                    </div>
                                <% } %>
                            <% }) %>
                        <% } %>
                    </div>

                    <div class="card bg-light">
                        <div class="card-body">
                            <h6 class="card-title">
                                <i class="bi bi-info-circle me-2"></i>
                                Informações da Tarefa
                            </h6>
                            <div class="small">
                                <p class="mb-1">
                                    <i class="bi bi-calendar-plus me-1"></i>
                                    <strong>Criada:</strong> <%= moment(task.createdAt).format('DD/MM/YYYY HH:mm') %>
                                </p>
                                <% if (task.updatedAt && task.updatedAt !== task.createdAt) { %>
                                    <p class="mb-0">
                                        <i class="bi bi-pencil me-1"></i>
                                        <strong>Atualizada:</strong> <%= moment(task.updatedAt).format('DD/MM/YYYY HH:mm') %>
                                    </p>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-flex gap-3 mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle me-2"></i>
                    Atualizar Tarefa
                </button>
                <a href="/tasks" class="btn btn-secondary">
                    <i class="bi bi-x-circle me-2"></i>
                    Cancelar
                </a>
            </div>
        </form>
    </div>
</div> 