<div class="header">
    <h1 class="page-title">
        <i class="bi bi-speedometer2 me-3"></i>
        Dashboard
    </h1>
    <p class="page-subtitle">Visão geral do sistema multitenancy</p>
</div>

<div class="stats-grid">
    <div class="stat-card">
        <div class="stat-number"><%= stats.totalTenants %></div>
        <div class="stat-label">Organizações</div>
    </div>
    
    <div class="stat-card">
        <div class="stat-number"><%= stats.activeTenants %></div>
        <div class="stat-label">Organizações Ativas</div>
    </div>
    
    <div class="stat-card">
        <div class="stat-number"><%= stats.totalUsers %></div>
        <div class="stat-label">Usuários</div>
    </div>
    
    <div class="stat-card">
        <div class="stat-number"><%= stats.totalTasks %></div>
        <div class="stat-label">Tarefas</div>
    </div>
</div>

<div class="content-card">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="mb-0">
            <i class="bi bi-building me-2"></i>
            Organizações Recentes
        </h3>
        <a href="/admin/tenants/create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>
            Nova Organização
        </a>
    </div>
    
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Slug</th>
                    <th>Domínio</th>
                    <th>Status</th>
                    <th>Usuários</th>
                    <th>Tarefas</th>
                    <th>Criado em</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% tenants.forEach(tenant => { %>
                    <tr>
                        <td>
                            <div class="d-flex align-items-center">
                                <div class="me-3">
                                    <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center" 
                                         style="width: 40px; height: 40px; background: <%= tenant.config?.primaryColor || '#6366f1' %> !important;">
                                        <i class="bi bi-building text-white"></i>
                                    </div>
                                </div>
                                <div>
                                    <div class="fw-bold"><%= tenant.name %></div>
                                    <% if (tenant.config?.companyName) { %>
                                        <small class="text-muted"><%= tenant.config.companyName %></small>
                                    <% } %>
                                </div>
                            </div>
                        </td>
                        <td>
                            <code class="bg-light px-2 py-1 rounded"><%= tenant.slug %></code>
                        </td>
                        <td>
                            <% if (tenant.domain) { %>
                                <span class="text-muted"><%= tenant.domain %></span>
                            <% } else { %>
                                <span class="text-muted">-</span>
                            <% } %>
                        </td>
                        <td>
                            <% if (tenant.isActive) { %>
                                <span class="badge badge-success">
                                    <i class="bi bi-check-circle me-1"></i>
                                    Ativo
                                </span>
                            <% } else { %>
                                <span class="badge badge-danger">
                                    <i class="bi bi-x-circle me-1"></i>
                                    Inativo
                                </span>
                            <% } %>
                        </td>
                        <td>
                            <span class="badge bg-light text-dark">
                                <%= (tenant as any)._count?.users || 0 %> usuários
                            </span>
                        </td>
                        <td>
                            <span class="badge bg-light text-dark">
                                <%= (tenant as any)._count?.tasks || 0 %> tarefas
                            </span>
                        </td>
                        <td>
                            <small class="text-muted">
                                <%= new Date(tenant.createdAt).toLocaleDateString('pt-BR') %>
                            </small>
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a href="/admin/tenants/<%= tenant.id %>" 
                                   class="btn btn-sm btn-outline-primary" 
                                   title="Ver detalhes">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a href="/admin/tenants/<%= tenant.id %>/edit" 
                                   class="btn btn-sm btn-outline-warning" 
                                   title="Editar">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <button type="button" 
                                        class="btn btn-sm btn-outline-danger" 
                                        title="Excluir"
                                        onclick="confirmDelete('<%= tenant.id %>', '<%= tenant.name %>')">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
    
    <% if (tenants.length === 0) { %>
        <div class="text-center py-5">
            <i class="bi bi-building display-1 text-muted"></i>
            <h4 class="mt-3 text-muted">Nenhuma organização encontrada</h4>
            <p class="text-muted">Crie sua primeira organização para começar</p>
            <a href="/admin/tenants/create" class="btn btn-primary">
                <i class="bi bi-plus-circle me-2"></i>
                Criar Organização
            </a>
        </div>
    <% } %>
</div>

<!-- Quick Actions -->
<div class="content-card">
    <h3 class="mb-4">
        <i class="bi bi-lightning me-2"></i>
        Ações Rápidas
    </h3>
    
    <div class="row">
        <div class="col-md-6 mb-3">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="bi bi-building display-4 text-primary mb-3"></i>
                    <h5>Gerenciar Organizações</h5>
                    <p class="text-muted">Criar, editar e configurar organizações</p>
                    <a href="/admin/tenants" class="btn btn-primary">
                        <i class="bi bi-arrow-right me-2"></i>
                        Ver Todas
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-md-6 mb-3">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="bi bi-people display-4 text-success mb-3"></i>
                    <h5>Gerenciar Usuários</h5>
                    <p class="text-muted">Visualizar e gerenciar usuários do sistema</p>
                    <a href="/admin/users" class="btn btn-success">
                        <i class="bi bi-arrow-right me-2"></i>
                        Ver Usuários
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- System Info -->
<div class="content-card">
    <h3 class="mb-4">
        <i class="bi bi-info-circle me-2"></i>
        Informações do Sistema
    </h3>
    
    <div class="row">
        <div class="col-md-6">
            <h6 class="text-muted mb-3">Estatísticas Gerais</h6>
            <ul class="list-unstyled">
                <li class="mb-2">
                    <i class="bi bi-check-circle text-success me-2"></i>
                    <strong>Organizações Ativas:</strong> <%= stats.activeTenants %> de <%= stats.totalTenants %>
                </li>
                <li class="mb-2">
                    <i class="bi bi-people text-primary me-2"></i>
                    <strong>Total de Usuários:</strong> <%= stats.totalUsers %>
                </li>
                <li class="mb-2">
                    <i class="bi bi-list-task text-warning me-2"></i>
                    <strong>Total de Tarefas:</strong> <%= stats.totalTasks %>
                </li>
            </ul>
        </div>
        
        <div class="col-md-6">
            <h6 class="text-muted mb-3">Funcionalidades</h6>
            <ul class="list-unstyled">
                <li class="mb-2">
                    <i class="bi bi-shield-check text-success me-2"></i>
                    <strong>Multitenancy:</strong> Isolamento completo por organização
                </li>
                <li class="mb-2">
                    <i class="bi bi-palette text-primary me-2"></i>
                    <strong>Personalização:</strong> Cores e configurações por tenant
                </li>
                <li class="mb-2">
                    <i class="bi bi-gear text-warning me-2"></i>
                    <strong>Administração:</strong> Painel completo de gerenciamento
                </li>
            </ul>
        </div>
    </div>
</div>

<script>
function confirmDelete(tenantId, tenantName) {
    if (confirm(`Tem certeza que deseja excluir a organização "${tenantName}"? Esta ação não pode ser desfeita.`)) {
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = `/admin/tenants/${tenantId}?_method=DELETE`;
        document.body.appendChild(form);
        form.submit();
    }
}
</script> 